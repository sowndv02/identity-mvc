@model LoginViewModel
@{

}

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Login</h1>

    <form method="post" asp-action="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
        <div class="border p-2 rounded">
            <p class="text-center">Login</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-control" />
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <div class="col-md-12">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-control" />
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" />
                    <div class="col-md-12">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <div class="custom-checkbox">
                        <label>
                            <input asp-for="RememberMe" /> Remember me
                        </label>
                    </div>
                </div>
            </div>


            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">Login</button>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-success form-control" asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-action="Register">Register as a new user?</a>
                    </div>
                    <div class="col-md-6 text-end">
                        <a class="btn btn-success form-control" asp-action="ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
